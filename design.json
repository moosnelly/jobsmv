      "tokens": {
        "topbar.height": 72,
        "toolbar.height": 64,
        "surface": "bg.surface",
        "divider": "border.subtle",
        "shadow": "sm"
      },
      "a11y": [
        "Landmarks: header, nav, main, footer",
