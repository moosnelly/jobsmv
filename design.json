  "contentGuidelines": {
    "headings": "Use Orkney for headings; keep under ~8 words when possible.",
    "buttons": "Verb-first labels (e.g., Details, Learn more). Avoid multi-line buttons.",
    "chips": "Title case; max 2 words per chip.",
    "prices": "Prefer per-hour notation with tabular numerals (e.g., $250/hr).",
    "dates": "Day Mon, YYYY (e.g., 20 May, 2023)."
  },
  "theming": {
    "default": "light",
    "supportsDarkMode": true,
    "componentAccentStrategy": "Cards can opt into soft accent backgrounds using accent.card-* tokens while keeping text high-contrast."
  },
