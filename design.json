{
  "meta": {
    "system": "JobsMV Design System",
    "shortName": "JobsMV DS",
    "version": "0.1.0",
    "created": "2025-11-13",
    "source": "Creative direction derived from provided UI screenshots",
    "intendedPlatforms": [
      "web",
      "mobile-web"
    ]
  },
  "brand": {
    "essence": [
      "Optimistic",
      "Modern",
      "Trustworthy",
      "Soft but professional"
    ],
    "voice": {
      "tone": [
        "encouraging",
        "clear",
        "concise"
      ],
      "do": [
        "Prefer action-oriented headlines (e.g., Recommended jobs).",
        "Use concise, scannable labels and tags.",
        "Favor positive, empowering microcopy."
      ],
      "dont": [
        "Avoid jargon-heavy HR language.",
        "Avoid alarmist tone in notifications."
      ]
    }
  },
  "foundations": {
    "colors": {
      "referencePalette": {
        "lilac": "#e3dbfa",
        "pink": "#fbe2f4",
        "peach": "#ffe1cc",
        "mint": "#d4f6ed"
      },
      "neutrals": {
        "0": "#FFFFFF",
        "10": "#F8FAFC",
        "20": "#F2F4F7",
        "30": "#E5E7EB",
        "40": "#D0D5DD",
        "50": "#98A2B3",
        "60": "#667085",
        "70": "#475467",
        "80": "#344054",
        "90": "#1F2937",
        "100": "#0B1220"
      },
      "brand": {
        "ink": "#0E1116",
        "ink-contrast": "#0B1220",
        "cta": "#48A8FF",
        "cta-contrast": "#0056B3"
      },
      "semantic": {
        "success": "#16A34A",
        "warning": "#F59E0B",
        "error": "#EF4444",
        "info": "#3B82F6"
      },
      "themes": {
        "light": {
          "bg.app": "{colors.neutrals.10}",
          "bg.surface": "{colors.neutrals.0}",
          "bg.sunken": "{colors.neutrals.20}",
          "text.primary": "{colors.neutrals.100}",
          "text.secondary": "{colors.neutrals.70}",
          "text.muted": "{colors.neutrals.60}",
          "border.subtle": "rgba(2, 6, 23, 0.06)",
          "border.default": "rgba(2, 6, 23, 0.12)",
          "control.fill": "{colors.neutrals.0}",
          "control.fill-muted": "{colors.neutrals.20}",
          "accent.card-1": "{colors.referencePalette.peach}",
          "accent.card-2": "{colors.referencePalette.mint}",
          "accent.card-3": "{colors.referencePalette.lilac}",
          "accent.card-4": "#E6F3FF",
          "cta.solid": "{colors.brand.cta}",
          "cta.on-cta": "{colors.neutrals.0}",
          "chip.bg": "rgba(2,6,23,0.06)",
          "chip.text": "{colors.neutrals.80}"
        },
        "dark": {
          "bg.app": "#0A0F1A",
          "bg.surface": "#0E1422",
          "bg.sunken": "#0B1220",
          "text.primary": "#E5E7EB",
          "text.secondary": "#BAC1CC",
          "text.muted": "#8E97A8",
          "border.subtle": "rgba(255,255,255,0.06)",
          "border.default": "rgba(255,255,255,0.12)",
          "control.fill": "#161B2A",
          "control.fill-muted": "#121726",
          "accent.card-1": "#2A2220",
          "accent.card-2": "#1E2A26",
          "accent.card-3": "#232238",
          "accent.card-4": "#1F2733",
          "cta.solid": "{colors.brand.cta}",
          "cta.on-cta": "{colors.neutrals.0}",
          "chip.bg": "rgba(255,255,255,0.08)",
          "chip.text": "#E5E7EB"
        }
      }
    },
    "typography": {
      "fonts": {
        "display": "Orkney, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Inter, Arial, sans-serif",
        "text": "Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif",
        "numeric": "Orkney, Inter, ui-sans-serif, system-ui, Arial, sans-serif"
      },
      "weights": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "scale": {
        "display-2xl": { "size": 56, "line": 64, "weight": "bold", "tracking": -0.5 },
        "display-xl": { "size": 48, "line": 56, "weight": "bold", "tracking": -0.4 },
        "h1": { "size": 40, "line": 48, "weight": "bold", "tracking": -0.2 },
        "h2": { "size": 32, "line": 40, "weight": "bold", "tracking": -0.1 },
        "h3": { "size": 24, "line": 32, "weight": "semibold", "tracking": 0 },
        "h4": { "size": 20, "line": 28, "weight": "semibold", "tracking": 0 },
        "subtitle": { "size": 18, "line": 28, "weight": "medium", "tracking": 0 },
        "body": { "size": 16, "line": 24, "weight": "regular", "tracking": 0 },
        "body-sm": { "size": 14, "line": 20, "weight": "regular", "tracking": 0 },
        "micro": { "size": 12, "line": 16, "weight": "semibold", "tracking": 0.2 }
      },
      "usage": {
        "pageTitle": "display-xl",
        "sectionTitle": "h2",
        "cardTitle": "h3",
        "label": "micro",
        "tag": "micro",
        "price": "h4"
      },
      "numericFeatures": {
        "price": { "fontFamily": "numeric", "variant": "tabular-nums" }
      }
    },
    "spacing": {
      "scale": [0, 2, 4, 6, 8, 12, 16, 20, 24, 28, 32, 40, 48, 56, 64],
      "gridGutter": 24,
      "pagePadding": { "mobile": 16, "tablet": 24, "desktop": 32 },
      "cardPadding": { "sm": 16, "md": 20, "lg": 24 }
    },
    "radii": {
      "xs": 6,
      "sm": 8,
      "md": 12,
      "lg": 16,
      "xl": 20,
      "xxl": 24,
      "card": 24,
      "pill": 999
    },
    "borders": {
      "widths": { "hairline": 1, "thin": 1, "regular": 2 },
      "focusRing": { "width": 2, "color.light": "#48A8FF", "color.dark": "#48A8FF" }
    },
    "shadows": {
      "xs": "0 1px 2px rgba(2,6,23,0.05)",
      "sm": "0 1px 3px rgba(2,6,23,0.08), 0 1px 2px rgba(2,6,23,0.06)",
      "md": "0 4px 12px rgba(2,6,23,0.08)",
      "lg": "0 10px 24px rgba(2,6,23,0.10)",
      "xl": "0 24px 48px rgba(2,6,23,0.14)"
    },
    "elevation": {
      "surface": "sm",
      "card": "md",
      "popover": "lg",
      "modal": "xl"
    },
    "layout": {
      "grid": { "columns": 12, "maxWidth": 1280, "gutter": 24 },
      "breakpoints": {
        "xs": 360,
        "sm": 640,
        "md": 768,
        "lg": 1024,
        "xl": 1280,
        "2xl": 1536
      }
    },
    "iconography": {
      "style": "rounded-geometric",
      "stroke": 1.5,
      "sizes": { "sm": 16, "md": 20, "lg": 24, "xl": 32 }
    },
    "motion": {
      "durations": { "fast": 120, "base": 180, "snappy": 220, "moderate": 260 },
      "easing": {
        "standard": "cubic-bezier(0.2, 0.8, 0.2, 1)",
        "emphasized": "cubic-bezier(0.2, 1, 0.2, 1)"
      },
      "use": {
        "micro": "fast + standard for chips, buttons, toggles",
        "macro": "snappy + emphasized for dialogs and toasts",
        "slider": "base + standard"
      }
    },
    "accessibility": {
      "contrastMinimum": "WCAG AA (4.5:1 for body, 3:1 for large type)",
      "targetMin": 44,
      "focusVisible": true,
      "focusStyle": "2px ring in brand cta color on both themes",
      "reduceMotionSupport": true
    }
  },
